{
    "version": "0.1.0",
    "command": "gcc",
//  "args": ["-Wall", "arrays_test.cpp", "-D", "DEBUG", "-g", "-O0", "-lstdc++", "-o", "arrays_test"],
    "args": ["-Wall", "arrays_test.cpp", "-O3", "-lstdc++", "-o", "arrays_test"],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}
